            </div> *@
                <img src="~/Assets/Cover_Images/@game.Cover" class="d-block user-select-none" width="100%" height="300">

                <div class="card-body">
                    <p class="card-text">@game.Description</p>
                    <a href="#">Details</a>
                </div>
            </div>
        </div>
    }
    
           
    

    
