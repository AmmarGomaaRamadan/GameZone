@model CreateDeviceViewModel
<h3 class="text-center fw-bolder">Create Device</h3>
<a class="btn btn-primary m-2 rounded-2" asp-controller="Game" asp-action="Create">back</a>
<form asp-controller="Device" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Icon" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Icon"></textarea>
                @* <span asp-validation-for="Name" class="text-danger"></span> *@
            </div>
            <button class="btn btn-light mt-4">Save</button>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}



